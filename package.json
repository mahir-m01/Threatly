{
  "name": "threatly",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.2.0",
  "description": "Threatly - Security threat intelligence platform",
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=frontend\" \"npm run dev --workspace=backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspace=backend && npm run build --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "postinstall": "npm run postinstall --workspace=backend --if-present",
    "start": "concurrently \"npm start --workspace=frontend\" \"npm start --workspace=backend\"",
    "start:frontend": "npm start --workspace=frontend",
    "start:backend": "npm start --workspace=backend",
    "lint": "npm run lint --workspaces",
    "test:db": "npm run test:db --workspace=backend"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20",
    "concurrently": "^8.2.2",
    "turbo": "^2.6.1",
    "typescript": "^5"
  }
}
